<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<link rel="stylesheet" href="/stylesheets/profile-show.css">

<main class="container">
  <div>
    <img 
      class="profile-avatar"
      src="<%= profile.avatar %>" 
      alt="<%= profile.username %>'s avatar"
      height="200"
      width="200"
    >
  </div>
  <div class="bio">BIO: <%= profile.bio %></div>
  <div class="usernames">
    <h1><%= isSelf ? "Your Profile" : profile.username %></h1>
    ACTIVISION ID: <%= profile.actid %> <br>
  <% if (isSelf) { %>
    <a href="/profiles/<%= profile._id %>/edit"><button>EDIT PROFILE</button></a>
  <% } %>
  </div>
</main>

<%- include('../partials/footer') %>