<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>EDIT YOUR REPLY</h1>
  <form 
    action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=PUT"
    method="POST"
  >
    <label>
      REPLY: 
      <textarea 
        style="resize: none;"
        cols="30"
        rows="20" 
        type="text"
        name="content" 
        autocomplete="off"
      ><%= comment.content %></textarea>
    </label>
    <button type="submit">UPDATE REPLY</button>
  </form>
</section>

