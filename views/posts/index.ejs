<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/index.css" />
<%- include('../partials/nav') %>

<main class="postIndexMain">
  <div class="postsIndex">POSTS</div>
  <% posts.forEach((post) => { %>
    <details>
      <summary class="summary">
        <div class="postTitle"><%= post.title %></div>
        <div class="postUser"><%= post.player.username %></div>
      </summary>        
      <p>CURRENTLY: <%= post.rank %></p>
      <p>NEEDS: <%= post.lookingFor %> players</p>
      <% if (user) { %>
        <p>THEY <%= post.mic ? 'HAVE A MIC' : `DON'T HAVE A MIC` %></p>
        <p>ACTIVISION ID: "<%= post.gamertag %>"</p>
        <p>ADDITIONAL INFO: <%= post.moreInfo %></p>
        <a href="/posts/<%= post._id %>">DETAILS</a>
      <% } %>
    </details>
  <% }) %>
</main>

<%- include('../partials/footer') %>