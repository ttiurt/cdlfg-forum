<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<%- include('../partials/nav') %>

<section>
  <h1>POSTS</h1>
  <h2>CURRENTLY LOOKING</h2>
    <body>
      <% posts.forEach((post) => { %>
        <details>
          <summary><%= post.title %></summary>
          <h4><%= post.name %></h4>
          <p>-Currently <%= post.rank %></p>
          <p>-Needs <%= post.lookingFor %> players</p>
          <% if (user) { %>
            <p>-They <%= post.mic ? 'have a mic' : `don't have a mic` %></p>
            <p>-Their gamertag is "<%= post.gamertag %>"</p>
            <p>Additional Comments: <%= post.moreInfo %></p>
            <a href="/posts/<%= post._id %>">DETAILS</a>
          <% } %>
        </details>
      <% }) %>
    </body>
</section>

<%- include('../partials/footer') %>